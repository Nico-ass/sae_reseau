ip address add 172.12.255.254/16 dev eth1
ip address add 192.168.0.5/24 dev eth0
ip link set dev eth0 up
ip link set dev eth1 up
ip route add default via 192.168.0.1
cp shared/resolv.conf /etc/resolv.conf

#autoriser les pings
iptables -A FORWARD -p icmp --icmp-type echo-reply -s 192.168.0.1 -j ACCEPT
iptables -A FORWARD -p icmp --icmp-type echo-reply -d 192.168.0.1 -j ACCEPT
iptables -A FORWARD -p icmp --icmp-type echo-request -s 192.168.0.1 -j ACCEPT
iptables -A FORWARD -p icmp --icmp-type echo-request -d 192.168.0.1 -j ACCEPT

iptables -A FORWARD -p icmp --icmp-type echo-reply -s 172.12.150.1 -j ACCEPT
iptables -A FORWARD -p icmp --icmp-type echo-reply -d 172.12.150.1 -j ACCEPT
iptables -A FORWARD -p icmp --icmp-type echo-request -s 172.12.150.1 -j ACCEPT
iptables -A FORWARD -p icmp --icmp-type echo-request -d 172.12.150.1 -j ACCEPT


#HTTPS (uniquement en tant que client)
iptables -A FORWARD -p tcp --dport 443 -s 172.12.150.1 -m conntrack --ctstate NEW,ESTABLISHED -j ACCEPT
iptables -A FORWARD -p tcp --sport 443 -d 172.12.150.1 -m conntrack --ctstarte ESTABLISHED -j ACCEPT 

